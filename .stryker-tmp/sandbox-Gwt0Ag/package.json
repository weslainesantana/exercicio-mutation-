{
  "name": "playwright-e2e",
  "version": "1.0.0",
  "description": "E2E tests using MS Playwright",
  "main": "index.js",
  "author": "ugioni",
  "license": "ISC",
  "devDependencies": {
    "@stryker-mutator/core": "^9.2.0",
    "@stryker-mutator/jest-runner": "^9.2.0",
    "@stryker-mutator/typescript-checker": "^9.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@zerostep/playwright": "^0.1.5",
    "jest": "^30.2.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.56.0",
    "playwright": "1.56.0",
    "sicolo": "^1.0.1"
  },
  "scripts": {
    "clean": "rimraf ./artifacts && mkdirp ./artifacts",
    "format": "prettier --write \"**/**.[jt]s?(x)\"",
    "verify": "prettier --check \"**/**.[jt]s?(x)\"",
    "scenario": "npx playwright test src/scenarios/ContatoEmpresa.spec.ts --output artifacts/media --workers 1",
    "test": "npx playwright test --output artifacts/media --workers 4",
    "debug": "npx playwright test --output artifacts/media --debug --workers 1",
    "ui": "npx playwright test --output artifacts/media --ui --workers 1",
    "show-report": "npx playwright show-report artifacts/report",
    "actions": "npx playwright test --output artifacts/media --workers 1",
    "ci": "npm run clean && npm run format && npm run verify && npm run test",
    
    
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    
    
    "test:mutation": "stryker run",
    "test:mutation:dry": "stryker run --dryRun",
    
    
    "test:e2e": "npx playwright test --output artifacts/media --workers 4",
    "test:e2e:debug": "npx playwright test --output artifacts/media --debug --workers 1",
    "test:e2e:ui": "npx playwright test --output artifacts/media --ui --workers 1",
    
    
    "test:all": "npm run test:unit && npm run test:mutation && npm run test:e2e",
    "test:complete": "echo '🧪 Testes Unitários...' && npm run test:unit && echo '🎯 Mutation Tests...' && npm run test:mutation && echo '🌐 Testes E2E...' && npm run test:e2e && echo '✅ TODOS OS TESTES PASSARAM!'",
    
    
    "ci:full": "npm run clean && npm run format && npm run verify && npm run test:all"
  }
}